<form
  action="/login"
  method="POST"
  class="xl:w-2/5 lg:w-2/5 md:w-2/5 w-full mx-auto max-w-sm mt-24 shadow-2xl"
>
  <div class="p-5">
    <% if(messages.error) {%>
    <label class="flex items-center text-red-500 justify-around mb-6"
      ><%=messages.error%></label
    >
    <%}%>
    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <label
          class="block text-gray-700 font-bold md:text-right mb-1 md:mb-0 pr-4"
          for="inline-full-name"
        >
          Username
        </label>
      </div>
      <div class="md:w-2/3">
        <input
          value="<%= messages.username%>"
          name="username"
          class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:bg-white"
          id="inline-full-name"
          type="text"
          placeholder="Name"
        />
      </div>
    </div>
    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <label
          class="block text-gray-700 font-bold md:text-right mb-1 md:mb-0 pr-4"
          for="inline-password"
        >
          Password
        </label>
      </div>
      <div class="md:w-2/3">
        <input
          name="password"
          class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:bg-white"
          id="inline-password"
          type="password"
          placeholder="**********"
        />
      </div>
    </div>
    <!-- <div class="md:flex md:items-center mb-6">
                        <div class="md:w-1/3"></div>
                        <label class="md:w-2/3 block text-gray-500 font-bold">
                        <input class="mr-2 leading-tight" type="checkbox">
                        <span class="text-sm">
                            Send me your newsletter!
                        </span>
                        </label>
                    </div> -->
    <div class="hover:font-bold text-center mb-3 text-red-500">
      <a href="/register">Don't have account?</a>
    </div>
    <div class="md:flex md:items-center">
      <div class="md:w-1/3"></div>
      <div class="md:w-2/3 w-1/3 mx-auto">
        <button
          class="btn-login shadow focus:shadow-outline focus:outline-none text-red-500 font-bold py-2 px-4 rounded"
          type="submit"
        >
          Sign Up
        </button>
      </div>
    </div>
  </div>
</form>
