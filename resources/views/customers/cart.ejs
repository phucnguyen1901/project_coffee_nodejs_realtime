<section>
  <% if(messages.error){%>
  <h2 class="text-red-500 text-center"><%= messages.error %></h2>
  <%}%>
  <div class="container mx-auto w-1/2 mt-5">
    <div>
      <h1 class="font-bold text-xl border-b border-gray-600">All items</h1>
    </div>
    <div class="flex items-center justify-between border-b border-gray-600">
      <img class="w-40 h-40" src="/image/phusi.png" alt="phusi_coffee" />
      <div>
        <h1>PhuSi Coffee</h1>
        <span>Size: M</span>
      </div>
      <span>Count</span>
      <span>price</span>
    </div>
    <div class="flex items-center justify-between border-b border-gray-600">
      <img class="w-40 h-40" src="/image/phusi.png" alt="phusi_coffee" />
      <div>
        <h1>PhuSi Coffee</h1>
        <span>Size: M</span>
      </div>
      <span>Count</span>
      <span>price</span>
    </div>
    <div class="flex items-center justify-between border-b border-gray-600">
      <img class="w-40 h-40" src="/image/phusi.png" alt="phusi_coffee" />
      <div>
        <h1>PhuSi Coffee</h1>
        <span>Size: M</span>
      </div>
      <span>Count</span>
      <span>price</span>
    </div>
    <!-- <hr> -->
    <div class="text-right mt-3">
      <div>
        <span>Total Amount: </span>
        <span class="text-green-700">9 $</span>
      </div>
      <div class="mt-3">
        <% if(user){%>
        <form action="/orders" method="POST">
          <div class="mb-3">
            <label for="" class="mr-3">Number Phone:</label>
            <input
              name="phone"
              type="text"
              class="inline-block border border-gray-400 focus:outline-none format-cart mb-3"
            />
          </div>
          <label for="" class="mr-3">Address:</label>
          <textarea
            class="inline-block border border-gray-400 focus:outline-none format-cart"
            name="address"
            cols="20"
            rows="5"
            placeholder="Please write note!"
          ></textarea>
          <br />
          <label for="" class="mr-3">Note:</label>
          <textarea
            class="inline-block border border-gray-400 focus:outline-none format-cart"
            name="note"
            cols="20"
            rows="5"
            placeholder="Please write note!"
          ></textarea>
          <br />
          <button
            type="submit"
            class="submit font-bold text-xl mt-3 px-2 rounded-full"
          >
            Order now
          </button>
        </form>
      </div>
      <%}else{%>
      <a href="/login" class="submit font-bold text-xl mt-3 px-2 rounded-full"
        >Login to order</a
      >
      <%}%>
    </div>
  </div>
  <br />
  <br />
  <br />
  <br />
  <br />
